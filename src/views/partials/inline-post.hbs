<div class="post">
  <a href="/board/{{@root.board.name}}/post/{{post.slug}}"><h2>{{post.title}}</h2></a>
  {{#if post.img}}
    <img src="{{post.content}}"/>
  {{/if}}
  {{#if post.txt}}
    <p>{{post.content}}</p>
  {{/if}}
  {{#if post.lnk}}
    <div class="thumbnail" href="{{post.content}}"></div>
  {{/if}}
  <div class="metadata">
    {{post.replies.length}} Replies
  </div>
</div>
